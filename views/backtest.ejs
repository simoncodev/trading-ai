<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/socket.io/socket.io.js"></script>
    <style>
        .backtest-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
        }
        .config-panel {
            background: var(--card-bg);
            border-radius: 12px;
            padding: 24px;
            margin-bottom: 24px;
        }
        .config-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 16px;
            margin-bottom: 20px;
        }
        .form-group {
            display: flex;
            flex-direction: column;
            gap: 6px;
        }
        .form-group label {
            color: var(--text-secondary);
            font-size: 0.85rem;
            font-weight: 500;
        }
        .form-group input, .form-group select {
            padding: 10px 12px;
            border: 1px solid var(--border-color);
            border-radius: 8px;
            background: var(--bg-primary);
            color: var(--text-primary);
            font-size: 0.95rem;
        }
        .form-group input:focus, .form-group select:focus {
            outline: none;
            border-color: var(--primary);
        }
        .btn-group {
            display: flex;
            gap: 12px;
            margin-top: 20px;
        }
        .btn-run {
            background: linear-gradient(135deg, #10b981, #059669);
            color: white;
            padding: 12px 32px;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
        }
        .btn-run:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
        }
        .btn-run:disabled {
            background: #6b7280;
            cursor: not-allowed;
            transform: none;
        }
        .btn-stop {
            background: #ef4444;
            color: white;
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
        }
        .progress-section {
            background: var(--card-bg);
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 24px;
            display: none;
        }
        .progress-section.active {
            display: block;
        }
        .progress-bar {
            height: 8px;
            background: var(--bg-primary);
            border-radius: 4px;
            overflow: hidden;
            margin: 12px 0;
        }
        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #10b981, #34d399);
            width: 0%;
            transition: width 0.3s;
        }
        .progress-text {
            color: var(--text-secondary);
            font-size: 0.9rem;
        }
        .results-section {
            display: none;
        }
        .results-section.active {
            display: block;
        }
        .metrics-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
            gap: 16px;
            margin-bottom: 24px;
        }
        .metric-card {
            background: var(--card-bg);
            border-radius: 12px;
            padding: 20px;
            text-align: center;
        }
        .metric-value {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 4px;
        }
        .metric-value.positive { color: #10b981; }
        .metric-value.negative { color: #ef4444; }
        .metric-label {
            color: var(--text-secondary);
            font-size: 0.85rem;
        }
        .trades-table-container {
            background: var(--card-bg);
            border-radius: 12px;
            padding: 20px;
            overflow-x: auto;
        }
        .trades-table {
            width: 100%;
            border-collapse: collapse;
        }
        .trades-table th, .trades-table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid var(--border-color);
        }
        .trades-table th {
            color: var(--text-secondary);
            font-weight: 500;
            font-size: 0.85rem;
        }
        .badge {
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 0.8rem;
            font-weight: 600;
        }
        .badge.buy { background: rgba(16, 185, 129, 0.2); color: #10b981; }
        .badge.sell { background: rgba(239, 68, 68, 0.2); color: #ef4444; }
        .badge.tp { background: rgba(16, 185, 129, 0.2); color: #10b981; }
        .badge.sl { background: rgba(239, 68, 68, 0.2); color: #ef4444; }
        .badge.signal { background: rgba(59, 130, 246, 0.2); color: #3b82f6; }
        .equity-chart {
            background: var(--card-bg);
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 24px;
            height: 300px;
        }
        .checkbox-group {
            display: flex;
            align-items: center;
            gap: 8px;
        }
        .checkbox-group input[type="checkbox"] {
            width: 18px;
            height: 18px;
        }
        .warning-box {
            background: rgba(245, 158, 11, 0.1);
            border: 1px solid rgba(245, 158, 11, 0.3);
            border-radius: 8px;
            padding: 12px 16px;
            margin-bottom: 16px;
            color: #f59e0b;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <h1 class="logo">ü§ñ Trading AI Agent</h1>
            <ul class="nav-menu">
                <li><a href="/" class="nav-link">Dashboard</a></li>
                <li><a href="/trades" class="nav-link">Operazioni</a></li>
                <li><a href="/performance" class="nav-link">Performance</a></li>
                <li><a href="/decisions" class="nav-link">Decisioni AI</a></li>
                <li><a href="/backtest" class="nav-link active">Backtest</a></li>
            </ul>
        </div>
    </nav>

    <div class="backtest-container">
        <div class="page-header">
            <h2>üìä Backtest Strategia</h2>
            <p class="timestamp">Testa la strategia su dati storici</p>
        </div>

        <!-- Configuration Panel -->
        <div class="config-panel">
            <h3 style="margin-bottom: 16px;">‚öôÔ∏è Configurazione Backtest</h3>
            
            <div class="warning-box" id="aiWarning" style="display: none;">
                ‚ö†Ô∏è <strong>Attenzione:</strong> Il backtest con AI richiede chiamate API per ogni decisione. 
                Questo pu√≤ richiedere molto tempo e consumare crediti. Limitato a ~500 chiamate AI.
            </div>

            <div class="config-grid">
                <div class="form-group">
                    <label>Simbolo</label>
                    <select id="symbol">
                        <option value="BTC">BTC (Bitcoin)</option>
                        <option value="ETH">ETH (Ethereum)</option>
                        <option value="SOL">SOL (Solana)</option>
                        <option value="DOGE">DOGE (Dogecoin)</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Data Inizio</label>
                    <input type="date" id="startDate">
                </div>
                <div class="form-group">
                    <label>Data Fine</label>
                    <input type="date" id="endDate">
                </div>
                <div class="form-group">
                    <label>Bilancio Iniziale ($)</label>
                    <input type="number" id="initialBalance" value="100" min="10" step="10">
                </div>
                <div class="form-group">
                    <label>Leverage</label>
                    <select id="leverage">
                        <option value="1">1x</option>
                        <option value="2">2x</option>
                        <option value="3">3x</option>
                        <option value="5">5x</option>
                        <option value="10" selected>10x</option>
                        <option value="20">20x</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Stop Loss (%)</label>
                    <input type="number" id="slPercent" value="1" min="0.1" max="10" step="0.1">
                </div>
                <div class="form-group">
                    <label>Take Profit (%)</label>
                    <input type="number" id="tpPercent" value="2" min="0.1" max="20" step="0.1">
                </div>
                <div class="form-group">
                    <label>&nbsp;</label>
                    <div class="checkbox-group">
                        <input type="checkbox" id="useAI">
                        <label for="useAI" style="margin: 0;">Usa AI per decisioni</label>
                    </div>
                </div>
            </div>

            <div class="btn-group">
                <button class="btn-run" id="btnRun" onclick="runBacktest()">
                    üöÄ Avvia Backtest
                </button>
                <button class="btn-stop" id="btnStop" onclick="stopBacktest()" style="display: none;">
                    ‚èπÔ∏è Stop
                </button>
            </div>
        </div>

        <!-- Progress Section -->
        <div class="progress-section" id="progressSection">
            <h3>‚è≥ Backtest in corso...</h3>
            <div class="progress-bar">
                <div class="progress-fill" id="progressFill"></div>
            </div>
            <p class="progress-text" id="progressText">Inizializzazione...</p>
        </div>

        <!-- Results Section -->
        <div class="results-section" id="resultsSection">
            <h3 style="margin-bottom: 20px;">üìà Risultati Backtest</h3>

            <!-- Metrics Grid -->
            <div class="metrics-grid" id="metricsGrid">
                <!-- Populated by JS -->
            </div>

            <!-- Equity Chart Placeholder -->
            <div class="equity-chart" id="equityChart">
                <h4>Equity Curve</h4>
                <canvas id="chartCanvas"></canvas>
            </div>

            <!-- Trades Table -->
            <div class="trades-table-container">
                <h4 style="margin-bottom: 16px;">üìã Lista Trade</h4>
                <table class="trades-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Side</th>
                            <th>Entry</th>
                            <th>Exit</th>
                            <th>P&L</th>
                            <th>P&L %</th>
                            <th>Exit Reason</th>
                            <th>Durata</th>
                        </tr>
                    </thead>
                    <tbody id="tradesBody">
                        <!-- Populated by JS -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const socket = io();
        let chart = null;

        // Set default dates
        const today = new Date();
        const weekAgo = new Date(today.getTime() - 7 * 24 * 60 * 60 * 1000);
        document.getElementById('endDate').value = today.toISOString().split('T')[0];
        document.getElementById('startDate').value = weekAgo.toISOString().split('T')[0];

        // Show AI warning when checkbox is checked
        document.getElementById('useAI').addEventListener('change', (e) => {
            document.getElementById('aiWarning').style.display = e.target.checked ? 'block' : 'none';
        });

        async function runBacktest() {
            const config = {
                symbol: document.getElementById('symbol').value,
                startDate: document.getElementById('startDate').value,
                endDate: document.getElementById('endDate').value,
                initialBalance: document.getElementById('initialBalance').value,
                leverage: document.getElementById('leverage').value,
                slPercent: document.getElementById('slPercent').value,
                tpPercent: document.getElementById('tpPercent').value,
                useAI: document.getElementById('useAI').checked,
            };

            // Validate dates
            if (!config.startDate || !config.endDate) {
                alert('Seleziona date valide');
                return;
            }

            // Show progress, hide results
            document.getElementById('progressSection').classList.add('active');
            document.getElementById('resultsSection').classList.remove('active');
            document.getElementById('btnRun').disabled = true;
            document.getElementById('btnStop').style.display = 'inline-block';

            try {
                const response = await fetch('/api/backtest/run', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(config),
                });

                const result = await response.json();

                if (response.ok) {
                    displayResults(result);
                } else {
                    alert('Errore: ' + result.error);
                }
            } catch (error) {
                alert('Errore di connessione: ' + error.message);
            } finally {
                document.getElementById('progressSection').classList.remove('active');
                document.getElementById('btnRun').disabled = false;
                document.getElementById('btnStop').style.display = 'none';
            }
        }

        async function stopBacktest() {
            await fetch('/api/backtest/stop', { method: 'POST' });
        }

        // Socket.IO progress updates
        socket.on('backtest:progress', (data) => {
            const progress = data.total ? (data.current / data.total) * 100 : 0;
            document.getElementById('progressFill').style.width = progress + '%';
            document.getElementById('progressText').textContent = data.message;
        });

        socket.on('backtest:status', (data) => {
            document.getElementById('progressText').textContent = data.message;
        });

        function displayResults(result) {
            const m = result.metrics;
            
            // Populate metrics
            const metricsHTML = `
                <div class="metric-card">
                    <div class="metric-value ${m.netPnL >= 0 ? 'positive' : 'negative'}">
                        $${m.netPnL.toFixed(2)}
                    </div>
                    <div class="metric-label">P&L Netto</div>
                </div>
                <div class="metric-card">
                    <div class="metric-value ${m.roi >= 0 ? 'positive' : 'negative'}">
                        ${m.roi.toFixed(2)}%
                    </div>
                    <div class="metric-label">ROI</div>
                </div>
                <div class="metric-card">
                    <div class="metric-value">${m.totalTrades}</div>
                    <div class="metric-label">Trade Totali</div>
                </div>
                <div class="metric-card">
                    <div class="metric-value ${m.winRate >= 50 ? 'positive' : 'negative'}">
                        ${m.winRate.toFixed(1)}%
                    </div>
                    <div class="metric-label">Win Rate</div>
                </div>
                <div class="metric-card">
                    <div class="metric-value ${m.profitFactor >= 1 ? 'positive' : 'negative'}">
                        ${m.profitFactor.toFixed(2)}
                    </div>
                    <div class="metric-label">Profit Factor</div>
                </div>
                <div class="metric-card">
                    <div class="metric-value negative">
                        -${m.maxDrawdownPercent.toFixed(2)}%
                    </div>
                    <div class="metric-label">Max Drawdown</div>
                </div>
                <div class="metric-card">
                    <div class="metric-value positive">$${m.averageWin.toFixed(2)}</div>
                    <div class="metric-label">Media Win</div>
                </div>
                <div class="metric-card">
                    <div class="metric-value negative">$${m.averageLoss.toFixed(2)}</div>
                    <div class="metric-label">Media Loss</div>
                </div>
            `;
            document.getElementById('metricsGrid').innerHTML = metricsHTML;

            // Populate trades table
            const tradesHTML = result.trades.map(t => {
                const duration = ((new Date(t.exitTime) - new Date(t.entryTime)) / 60000).toFixed(0);
                return `
                    <tr>
                        <td>${t.id}</td>
                        <td><span class="badge ${t.side}">${t.side.toUpperCase()}</span></td>
                        <td>$${t.entryPrice.toFixed(2)}</td>
                        <td>$${t.exitPrice.toFixed(2)}</td>
                        <td style="color: ${t.pnl >= 0 ? '#10b981' : '#ef4444'}">
                            ${t.pnl >= 0 ? '+' : ''}$${t.pnl.toFixed(2)}
                        </td>
                        <td style="color: ${t.pnlPercent >= 0 ? '#10b981' : '#ef4444'}">
                            ${t.pnlPercent >= 0 ? '+' : ''}${t.pnlPercent.toFixed(2)}%
                        </td>
                        <td><span class="badge ${t.exitReason}">${t.exitReason.toUpperCase()}</span></td>
                        <td>${duration}m</td>
                    </tr>
                `;
            }).join('');
            document.getElementById('tradesBody').innerHTML = tradesHTML;

            // Draw equity curve
            if (result.equityCurve && result.equityCurve.length > 0) {
                drawEquityChart(result.equityCurve, result.config.initialBalance);
            }

            document.getElementById('resultsSection').classList.add('active');
        }

        function drawEquityChart(equityCurve, initialBalance) {
            const ctx = document.getElementById('chartCanvas').getContext('2d');
            
            if (chart) {
                chart.destroy();
            }

            const labels = equityCurve.map(p => new Date(p.time).toLocaleDateString('it-IT', { 
                month: 'short', 
                day: 'numeric',
                hour: '2-digit'
            }));
            const data = equityCurve.map(p => p.equity);

            chart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Equity',
                        data: data,
                        borderColor: data[data.length - 1] >= initialBalance ? '#10b981' : '#ef4444',
                        backgroundColor: data[data.length - 1] >= initialBalance 
                            ? 'rgba(16, 185, 129, 0.1)' 
                            : 'rgba(239, 68, 68, 0.1)',
                        fill: true,
                        tension: 0.3,
                    }, {
                        label: 'Bilancio Iniziale',
                        data: Array(labels.length).fill(initialBalance),
                        borderColor: '#6b7280',
                        borderDash: [5, 5],
                        pointRadius: 0,
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: true,
                            position: 'top',
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: false,
                        }
                    }
                }
            });
        }
    </script>
</body>
</html>
