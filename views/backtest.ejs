<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>BACKTEST - TRADING BOT</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=VT323&display=swap');
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'VT323', monospace;
            background: #000;
            color: #fff;
            min-height: 100vh;
            font-size: 18px;
            line-height: 1.4;
        }
        
        .container {
            max-width: 100%;
            padding: 8px;
        }
        
        /* HEADER */
        .header {
            border: 4px solid #fff;
            padding: 12px;
            margin-bottom: 8px;
            text-align: center;
        }
        
        .header h1 {
            font-size: 24px;
            letter-spacing: 4px;
        }
        
        .status-line {
            font-size: 14px;
            margin-top: 8px;
            color: #888;
        }
        
        /* SECTION */
        .section {
            border: 4px solid #fff;
            margin-bottom: 8px;
        }
        
        .section-header {
            border-bottom: 3px solid #fff;
            padding: 10px 12px;
            font-size: 16px;
            text-transform: uppercase;
            letter-spacing: 3px;
            background: #111;
        }
        
        .section-body {
            padding: 16px;
        }
        
        /* CONFIG GRID */
        .config-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 12px;
        }
        
        @media (min-width: 600px) {
            .config-grid {
                grid-template-columns: repeat(4, 1fr);
            }
        }
        
        .form-group {
            margin-bottom: 8px;
        }
        
        .form-group label {
            display: block;
            font-size: 12px;
            color: #888;
            text-transform: uppercase;
            letter-spacing: 2px;
            margin-bottom: 4px;
        }
        
        .form-group input,
        .form-group select {
            width: 100%;
            padding: 10px 12px;
            border: 3px solid #fff;
            background: #000;
            color: #fff;
            font-family: 'VT323', monospace;
            font-size: 18px;
        }
        
        .form-group input:focus,
        .form-group select:focus {
            outline: none;
            border-color: #0f0;
        }
        
        .checkbox-group {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-top: 20px;
        }
        
        .checkbox-group input[type="checkbox"] {
            width: 20px;
            height: 20px;
        }
        
        /* BUTTONS */
        .btn-row {
            display: flex;
            gap: 8px;
            margin-top: 16px;
        }
        
        .btn {
            flex: 1;
            border: 3px solid #fff;
            background: #000;
            color: #fff;
            padding: 12px;
            font-family: 'VT323', monospace;
            font-size: 16px;
            text-transform: uppercase;
            letter-spacing: 2px;
            cursor: pointer;
            transition: all 0.1s;
        }
        
        .btn:hover {
            background: #fff;
            color: #000;
        }
        
        .btn:active {
            transform: scale(0.98);
        }
        
        .btn:disabled {
            border-color: #333;
            color: #333;
            cursor: not-allowed;
        }
        
        .btn.run {
            border-color: #0f0;
            color: #0f0;
        }
        
        .btn.run:hover {
            background: #0f0;
            color: #000;
        }
        
        .btn.stop {
            border-color: #f00;
            color: #f00;
        }
        
        .btn.stop:hover {
            background: #f00;
            color: #000;
        }
        
        /* PROGRESS */
        .progress-bar {
            height: 20px;
            border: 3px solid #fff;
            background: #000;
            margin: 16px 0;
        }
        
        .progress-fill {
            height: 100%;
            background: #0f0;
            width: 0%;
            transition: width 0.3s;
        }
        
        .progress-text {
            font-size: 14px;
            color: #0f0;
            text-align: center;
        }
        
        /* RESULTS */
        .metrics-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 8px;
            margin-bottom: 16px;
        }
        
        @media (min-width: 600px) {
            .metrics-grid {
                grid-template-columns: repeat(4, 1fr);
            }
        }
        
        .metric-box {
            border: 3px solid #fff;
            padding: 12px 8px;
            text-align: center;
        }
        
        .metric-label {
            font-size: 12px;
            color: #888;
            text-transform: uppercase;
            letter-spacing: 2px;
        }
        
        .metric-value {
            font-size: 22px;
            margin-top: 4px;
        }
        
        .metric-value.positive { color: #0f0; }
        .metric-value.negative { color: #f00; }
        
        /* CHART */
        .chart-container {
            border: 3px solid #fff;
            padding: 12px;
            margin-bottom: 16px;
            height: 250px;
        }
        
        /* TRADES TABLE */
        .trades-table {
            width: 100%;
            border-collapse: collapse;
        }
        
        .trades-table th,
        .trades-table td {
            border: 1px solid #333;
            padding: 8px;
            text-align: left;
            font-size: 14px;
        }
        
        .trades-table th {
            background: #111;
            text-transform: uppercase;
            font-size: 12px;
            color: #888;
        }
        
        .badge {
            padding: 2px 6px;
            font-size: 12px;
            text-transform: uppercase;
        }
        
        .badge.buy { color: #0f0; }
        .badge.sell { color: #f00; }
        .badge.tp { color: #0f0; }
        .badge.sl { color: #f00; }
        .badge.signal { color: #ff0; }
        
        /* WARNINGS */
        .warning-box {
            border: 3px solid #ff0;
            padding: 12px;
            color: #ff0;
            margin-bottom: 16px;
            font-size: 14px;
            display: none;
        }
        
        /* HIDDEN */
        .hidden { display: none; }
        
        /* SCROLLBAR */
        ::-webkit-scrollbar {
            width: 8px;
        }
        
        ::-webkit-scrollbar-track {
            background: #000;
        }
        
        ::-webkit-scrollbar-thumb {
            background: #333;
            border: 1px solid #fff;
        }
        
        /* TABLE SCROLL */
        .table-container {
            max-height: 300px;
            overflow-y: auto;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- HEADER -->
        <div class="header">
            <h1>[ BACKTEST ]</h1>
            <div class="status-line">
                TEST STRATEGY ON HISTORICAL DATA
            </div>
        </div>
        
        <!-- CONFIG -->
        <div class="section">
            <div class="section-header">◆ CONFIGURATION</div>
            <div class="section-body">
                <div class="warning-box" id="aiWarning">
                    ⚠ AI MODE: Requires API calls for each decision. May take time and consume credits.
                </div>
                
                <div class="config-grid">
                    <div class="form-group">
                        <label>Symbol</label>
                        <select id="symbol">
                            <option value="BTC">BTC</option>
                            <option value="ETH">ETH</option>
                            <option value="SOL">SOL</option>
                            <option value="DOGE">DOGE</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Start Date</label>
                        <input type="date" id="startDate">
                    </div>
                    <div class="form-group">
                        <label>End Date</label>
                        <input type="date" id="endDate">
                    </div>
                    <div class="form-group">
                        <label>Balance ($)</label>
                        <input type="number" id="initialBalance" value="100" min="10" step="10">
                    </div>
                    <div class="form-group">
                        <label>Leverage</label>
                        <select id="leverage">
                            <option value="1">1x</option>
                            <option value="2">2x</option>
                            <option value="5" selected>5x</option>
                            <option value="10">10x</option>
                            <option value="20">20x</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Stop Loss %</label>
                        <input type="number" id="slPercent" value="8" min="0.1" max="20" step="0.1">
                    </div>
                    <div class="form-group">
                        <label>Take Profit %</label>
                        <input type="number" id="tpPercent" value="4" min="0.1" max="20" step="0.1">
                    </div>
                    <div class="form-group">
                        <div class="checkbox-group">
                            <input type="checkbox" id="useAI">
                            <label for="useAI" style="margin: 0; text-transform: none;">Use AI</label>
                        </div>
                    </div>
                </div>
                
                <div class="btn-row">
                    <button class="btn run" id="btnRun" onclick="runBacktest()">▶ START BACKTEST</button>
                    <button class="btn stop hidden" id="btnStop" onclick="stopBacktest()">■ STOP</button>
                    <button class="btn" onclick="location.href='/'">← BACK</button>
                </div>
            </div>
        </div>
        
        <!-- PROGRESS -->
        <div class="section hidden" id="progressSection">
            <div class="section-header">◆ PROGRESS</div>
            <div class="section-body">
                <div class="progress-bar">
                    <div class="progress-fill" id="progressFill"></div>
                </div>
                <p class="progress-text" id="progressText">Initializing...</p>
            </div>
        </div>
        
        <!-- RESULTS -->
        <div class="section hidden" id="resultsSection">
            <div class="section-header">◆ RESULTS</div>
            <div class="section-body">
                <div class="metrics-grid" id="metricsGrid"></div>
                
                <div class="chart-container">
                    <canvas id="chartCanvas"></canvas>
                </div>
                
                <div class="section-header" style="margin: 16px -16px; margin-bottom: 0;">◆ TRADES LOG</div>
                <div class="table-container">
                    <table class="trades-table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Side</th>
                                <th>Entry</th>
                                <th>Exit</th>
                                <th>P&L</th>
                                <th>%</th>
                                <th>Reason</th>
                            </tr>
                        </thead>
                        <tbody id="tradesBody"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const socket = io();
        let chart = null;
        
        // Set default dates
        const today = new Date();
        const weekAgo = new Date(today.getTime() - 7 * 24 * 60 * 60 * 1000);
        document.getElementById('endDate').value = today.toISOString().split('T')[0];
        document.getElementById('startDate').value = weekAgo.toISOString().split('T')[0];
        
        // Show AI warning
        document.getElementById('useAI').addEventListener('change', (e) => {
            document.getElementById('aiWarning').style.display = e.target.checked ? 'block' : 'none';
        });
        
        async function runBacktest() {
            const config = {
                symbol: document.getElementById('symbol').value,
                startDate: document.getElementById('startDate').value,
                endDate: document.getElementById('endDate').value,
                initialBalance: document.getElementById('initialBalance').value,
                leverage: document.getElementById('leverage').value,
                slPercent: document.getElementById('slPercent').value,
                tpPercent: document.getElementById('tpPercent').value,
                useAI: document.getElementById('useAI').checked,
            };
            
            if (!config.startDate || !config.endDate) {
                alert('Select valid dates');
                return;
            }
            
            // Show progress
            document.getElementById('progressSection').classList.remove('hidden');
            document.getElementById('resultsSection').classList.add('hidden');
            document.getElementById('btnRun').disabled = true;
            document.getElementById('btnStop').classList.remove('hidden');
            
            try {
                const response = await fetch('/api/backtest/run', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(config),
                });
                
                const result = await response.json();
                
                if (response.ok) {
                    displayResults(result);
                } else {
                    alert('Error: ' + result.error);
                }
            } catch (error) {
                alert('Connection error: ' + error.message);
            } finally {
                document.getElementById('progressSection').classList.add('hidden');
                document.getElementById('btnRun').disabled = false;
                document.getElementById('btnStop').classList.add('hidden');
            }
        }
        
        async function stopBacktest() {
            await fetch('/api/backtest/stop', { method: 'POST' });
        }
        
        // Socket.IO progress
        socket.on('backtest:progress', (data) => {
            const progress = data.total ? (data.current / data.total) * 100 : 0;
            document.getElementById('progressFill').style.width = progress + '%';
            document.getElementById('progressText').textContent = data.message;
        });
        
        socket.on('backtest:status', (data) => {
            document.getElementById('progressText').textContent = data.message;
        });
        
        function displayResults(result) {
            const m = result.metrics;
            
            const metricsHTML = `
                <div class="metric-box">
                    <div class="metric-label">P&L</div>
                    <div class="metric-value ${m.netPnL >= 0 ? 'positive' : 'negative'}">
                        $${m.netPnL.toFixed(2)}
                    </div>
                </div>
                <div class="metric-box">
                    <div class="metric-label">ROI</div>
                    <div class="metric-value ${m.roi >= 0 ? 'positive' : 'negative'}">
                        ${m.roi.toFixed(1)}%
                    </div>
                </div>
                <div class="metric-box">
                    <div class="metric-label">Trades</div>
                    <div class="metric-value">${m.totalTrades}</div>
                </div>
                <div class="metric-box">
                    <div class="metric-label">Win Rate</div>
                    <div class="metric-value ${m.winRate >= 50 ? 'positive' : 'negative'}">
                        ${m.winRate.toFixed(0)}%
                    </div>
                </div>
                <div class="metric-box">
                    <div class="metric-label">Profit Factor</div>
                    <div class="metric-value ${m.profitFactor >= 1 ? 'positive' : 'negative'}">
                        ${m.profitFactor.toFixed(2)}
                    </div>
                </div>
                <div class="metric-box">
                    <div class="metric-label">Max DD</div>
                    <div class="metric-value negative">-${m.maxDrawdownPercent.toFixed(1)}%</div>
                </div>
                <div class="metric-box">
                    <div class="metric-label">Avg Win</div>
                    <div class="metric-value positive">$${m.averageWin.toFixed(2)}</div>
                </div>
                <div class="metric-box">
                    <div class="metric-label">Avg Loss</div>
                    <div class="metric-value negative">$${m.averageLoss.toFixed(2)}</div>
                </div>
            `;
            document.getElementById('metricsGrid').innerHTML = metricsHTML;
            
            // Trades table
            const tradesHTML = result.trades.map(t => `
                <tr>
                    <td>${t.id}</td>
                    <td><span class="badge ${t.side}">${t.side.toUpperCase()}</span></td>
                    <td>$${t.entryPrice.toFixed(2)}</td>
                    <td>$${t.exitPrice.toFixed(2)}</td>
                    <td style="color: ${t.pnl >= 0 ? '#0f0' : '#f00'}">
                        ${t.pnl >= 0 ? '+' : ''}$${t.pnl.toFixed(2)}
                    </td>
                    <td style="color: ${t.pnlPercent >= 0 ? '#0f0' : '#f00'}">
                        ${t.pnlPercent >= 0 ? '+' : ''}${t.pnlPercent.toFixed(1)}%
                    </td>
                    <td><span class="badge ${t.exitReason}">${t.exitReason.toUpperCase()}</span></td>
                </tr>
            `).join('');
            document.getElementById('tradesBody').innerHTML = tradesHTML;
            
            // Draw chart
            if (result.equityCurve && result.equityCurve.length > 0) {
                drawEquityChart(result.equityCurve, result.config.initialBalance);
            }
            
            document.getElementById('resultsSection').classList.remove('hidden');
        }
        
        function drawEquityChart(equityCurve, initialBalance) {
            const ctx = document.getElementById('chartCanvas').getContext('2d');
            
            if (chart) chart.destroy();
            
            const labels = equityCurve.map((p, i) => i);
            const data = equityCurve.map(p => p.equity);
            const finalEquity = data[data.length - 1];
            const lineColor = finalEquity >= initialBalance ? '#0f0' : '#f00';
            
            chart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Equity',
                        data: data,
                        borderColor: lineColor,
                        backgroundColor: 'transparent',
                        borderWidth: 2,
                        pointRadius: 0,
                        tension: 0.1,
                    }, {
                        label: 'Initial',
                        data: Array(labels.length).fill(initialBalance),
                        borderColor: '#555',
                        borderDash: [5, 5],
                        borderWidth: 1,
                        pointRadius: 0,
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false }
                    },
                    scales: {
                        x: {
                            display: false
                        },
                        y: {
                            grid: { color: '#333' },
                            ticks: { color: '#888' }
                        }
                    }
                }
            });
        }
    </script>
</body>
</html>
