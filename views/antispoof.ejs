    <script src="/socket.io/socket.io.js"></script>
    <script>
        // ===========================================
        // STATE
        // ===========================================
        const params = new URLSearchParams(window.location.search);
        const currentSymbol = params.get('symbol') || 'BTC-USDC';
        const symbolShort = currentSymbol.split('-')[0];
        
        let wsMessageCount = 0;
        let currentPosition = null;
        let currentSignal = { action: 'WAIT', confidence: 0 };
        let currentPrice = 0;
        let positionClosed = false; // Flag per forzare nascondere la posizione
        let positionClosedTimestamp = 0; // Timestamp di quando √® stata chiusa
        const POSITION_CLOSED_GRACE_PERIOD = 5000; // 5 secondi di grace period
        
        // Funzione per controllare se siamo ancora nel grace period
        function isInClosedGracePeriod() {
            if (!positionClosed) return false;
            return (Date.now() - positionClosedTimestamp) < POSITION_CLOSED_GRACE_PERIOD;
        }
        
        // Chart
        const chartData = { labels: [], bid: [], ask: [] };
        let chart;

        // ========================================
        // STATE MANAGEMENT (semplificato)
        // ========================================
        
        // Cache per evitare aggiornamenti inutili
        const stateCache = {
            lastSpoofData: null
        };
        
        // Throttle semplice
        const THROTTLE_MS = 200;
        let lastDomUpdate = {};
        
        function throttledUpdate(key, updateFn) {
            const now = Date.now();
            if (lastDomUpdate[key] && now - lastDomUpdate[key] < THROTTLE_MS) {
                return;
            }
            lastDomUpdate[key] = now;
            updateFn();
        }
        
        // Aggiornamento testo ottimizzato
        function setText(id, value) {
            const el = document.getElementById(id);
            if (el && el.textContent !== String(value)) {
                el.textContent = String(value);
            }
        }
        
        function setClass(id, className) {
            const el = document.getElementById(id);
            if (el && el.className !== className) {
                el.className = className;
            }
        }

        // ===========================================
        // WEBSOCKET CONNECTION
        // ===========================================
        const socket = io({
            transports: ['websocket'],
            reconnection: true,
            reconnectionDelay: 1000,
            reconnectionAttempts: 10
        });

        // Connection events
        socket.on('connect', () => {
            console.log('‚úÖ WebSocket connected:', socket.id);
            updateConnectionStatus(true);
        });

        socket.on('disconnect', () => {
            console.log('‚ùå WebSocket disconnected');
            updateConnectionStatus(false);
        });

        socket.on('connect_error', (err) => {
            console.error('WebSocket connection error:', err);
            updateConnectionStatus(false);
        });

        // ===========================================
        // WEBSOCKET EVENT HANDLERS
        // ===========================================

        // Signal updates (real-time)
        socket.on('signal:update', (signal) => {
            wsMessageCount++;
            updateWSCount();
            
            if (signal.symbol === currentSymbol) {
                // Aggiorna prezzo corrente
                if (signal.price && signal.price > 0) {
                    currentPrice = signal.price;
                    setText('price', '$' + currentPrice.toLocaleString('it-IT', { minimumFractionDigits: 2 }));
                    // Aggiorna P&L posizione se esiste
                    if (currentPosition) {
                        updateLivePositionPnl();
                    }
                }
                
                updateSignal({
                    action: signal.action,
                    confidence: signal.confidence,
                    reasoning: signal.reasoning,
                    details: signal.details || { currentPrice: signal.price }
                });
                updateTimestamp();
                checkConflict();
            }
        });

        // Multi-symbol signals (batch update)
        socket.on('multisymbol:signals', (signals) => {
            wsMessageCount++;
            updateWSCount();
            
            if (signals && signals[currentSymbol]) {
                const sig = signals[currentSymbol];
                if (sig.details && sig.details.currentPrice && sig.details.currentPrice > 0) {
                    currentPrice = sig.details.currentPrice;
                    setText('price', '$' + currentPrice.toLocaleString('it-IT', { minimumFractionDigits: 2 }));
                    if (currentPosition) {
                        updateLivePositionPnl();
                    }
                }
                updateSignal(sig);
                updateTimestamp();
            }
        });

        // Multi-symbol snapshots
        socket.on('multisymbol:snapshots', (snapshots) => {
            wsMessageCount++;
            updateWSCount();
            
            if (snapshots && snapshots[currentSymbol]) {
                const snap = snapshots[currentSymbol];
                if (snap.currentPrice && snap.currentPrice > 0) {
                    currentPrice = snap.currentPrice;
                    setText('price', '$' + currentPrice.toLocaleString('it-IT', { minimumFractionDigits: 2 }));
                    if (currentPosition) {
                        updateLivePositionPnl();
                    }
                }
                if (snap.spoofingAlerts) {
                    updateAlerts(snap.spoofingAlerts);
                }
                updateTimestamp();
            }
        });

        // Positions update (legacy)
        socket.on('positions:update', (data) => {
            wsMessageCount++;
            updateWSCount();
            
            // Se la posizione √® stata chiusa di recente, ignora gli aggiornamenti per evitare ghost positions
            if (isInClosedGracePeriod()) {
                // Aggiorna solo stats account, non la posizione
                updateAccountStats(data);
                updateTimestamp();
                return;
            }
            
            // Reset flag solo se grace period √® passato
            if (positionClosed && !isInClosedGracePeriod()) {
                positionClosed = false;
            }
            
            updateAccountStats(data);
            
            const trades = data.trades || [];
            const myTrades = trades.filter(t => t.symbol === currentSymbol);
            renderPosition(myTrades);
            
            updateTimestamp();
        });

        // Real-time positions
        socket.on('positions:realtime', (summary) => {
            wsMessageCount++;
            updateWSCount();
            
            // Se la posizione √® stata chiusa di recente, ignora gli aggiornamenti per evitare ghost positions
            if (isInClosedGracePeriod()) {
                // Aggiorna solo stats account, non la posizione
                updateAccountStatsRealtime(summary);
                updateTimestamp();
                return;
            }
            
            // Reset flag solo se grace period √® passato
            if (positionClosed && !isInClosedGracePeriod()) {
                positionClosed = false;
            }
            
            updateAccountStatsRealtime(summary);
            
            const positions = summary.positions || [];
            const myPositions = positions.filter(p => p.symbol === currentSymbol);
            renderPositionRealtime(myPositions);
            
            updateTimestamp();
        });

        // ‚òÖ TRADE CLOSED EVENT - Cruciale per aggiornare la UI
        socket.on('trade:closed', (data) => {
            console.log('üîí Trade closed:', data);
            wsMessageCount++;
            updateWSCount();
            
            // Forza la chiusura della posizione nella UI
            positionClosed = true;
            positionClosedTimestamp = Date.now();
            currentPosition = null;
            
            const noPos = document.getElementById('no-position');
            const posCard = document.getElementById('position-card');
            noPos.style.display = 'block';
            posCard.style.display = 'none';
            
            // Nascondi warning conflitto
            document.getElementById('conflict-warning').classList.remove('show');
            
            updateTimestamp();
        });

        // ‚òÖ POSITION CLOSED EVENT (from PositionManager - trailing stop, TP, SL, etc.)
        socket.on('position:closed', (data) => {
            console.log('üîí Position closed by PositionManager:', data);
            wsMessageCount++;
            updateWSCount();
            
            // Forza la chiusura della posizione nella UI
            positionClosed = true;
            positionClosedTimestamp = Date.now();
            currentPosition = null;
            
            const noPos = document.getElementById('no-position');
            const posCard = document.getElementById('position-card');
            noPos.style.display = 'block';
            posCard.style.display = 'none';
            
            // Nascondi warning conflitto
            document.getElementById('conflict-warning').classList.remove('show');
            
            updateTimestamp();
        });

        // ‚òÖ ALL TRADES CLOSED EVENT
        socket.on('trades:allClosed', (data) => {
            console.log('üîí All trades closed:', data);
            wsMessageCount++;
            updateWSCount();
            
            positionClosed = true;
            positionClosedTimestamp = Date.now();
            currentPosition = null;
            
            const noPos = document.getElementById('no-position');
            const posCard = document.getElementById('position-card');
            noPos.style.display = 'block';
            posCard.style.display = 'none';
            
            document.getElementById('conflict-warning').classList.remove('show');
            
            updateTimestamp();
        });

        // Stats update
        socket.on('stats:update', (stats) => {
            wsMessageCount++;
            updateWSCount();
            updateStats(stats);
            updateTimestamp();
        });

        // Account update
        socket.on('account:update', (account) => {
            wsMessageCount++;
            updateWSCount();
            if (account.balance !== undefined) {
                setText('balance', '$' + account.balance.toFixed(2));
            }
            updateTimestamp();
        });

        // Recent trades
        socket.on('trades:recent', (trades) => {
            wsMessageCount++;
            updateWSCount();
            updateTrades(trades);
            updateTimestamp();
        });

        // Trade execution
        socket.on('trade:execution', (execution) => {
            wsMessageCount++;
            updateWSCount();
            console.log('üîî Trade execution:', execution);
            
            // Se √® una chiusura trade, aggiorna la UI
            if (execution.type === 'CLOSE' || execution.type === 'close') {
                positionClosed = true;
                positionClosedTimestamp = Date.now();
                currentPosition = null;
                
                const noPos = document.getElementById('no-position');
                const posCard = document.getElementById('position-card');
                noPos.style.display = 'block';
                posCard.style.display = 'none';
                
                document.getElementById('conflict-warning').classList.remove('show');
            }
            
            updateTimestamp();
        });

        // Spoofing alerts
        socket.on('liquidity:spoofing', (alerts) => {
            wsMessageCount++;
            updateWSCount();
            updateAlerts(alerts);
            updateTimestamp();
        });

        // ===========================================
        // UPDATE FUNCTIONS
        // ===========================================
        
        function updateConnectionStatus(connected) {
            const bar = document.getElementById('connection-bar');
            const status = document.getElementById('connection-status');
            
            if (connected) {
                bar.classList.remove('disconnected');
                status.innerHTML = '<span class="status-dot active"></span> WebSocket Connesso';
            } else {
                bar.classList.add('disconnected');
                status.innerHTML = '<span class="status-dot disconnected"></span> Disconnesso - Riconnessione...';
            }
        }

        function updateWSCount() {
            setText('ws-count', String(wsMessageCount));
        }

        function updateTimestamp() {
            setText('last-update', 'Ultimo aggiornamento: ' + new Date().toLocaleTimeString('it-IT'));
        }

        function updateSignal(data) {
            const action = data.action || 'WAIT';
            const conf = data.confidence || 0;
            
            currentSignal = { action, confidence: conf };
            
            throttledUpdate('signal', () => {
                setClass('signal-box', 'signal-box ' + action.toLowerCase());
                setClass('signal-action', 'signal-action ' + action.toLowerCase());
                setText('signal-action', translateAction(action));
                setText('signal-conf', conf + '%');
                setText('signal-reasoning', data.reasoning || 'Nessun segnale');
            });

            const d = data.details || {};
            const bidVol = d.bidSpoofVolume || 0;
            const askVol = d.askSpoofVolume || 0;
            const totalVol = bidVol + askVol;
            
            // Cache dati spoofing validi
            if (totalVol > 0) {
                stateCache.lastSpoofData = { bid: bidVol, ask: askVol, total: totalVol, details: d };
            }
            
            // Usa i dati correnti o quelli cachati
            const displayBid = totalVol > 0 ? bidVol : (stateCache.lastSpoofData?.bid || 0);
            const displayAsk = totalVol > 0 ? askVol : (stateCache.lastSpoofData?.ask || 0);
            const displayDetails = totalVol > 0 ? d : (stateCache.lastSpoofData?.details || d);
            
            const ratio = ((displayDetails.spoofRatio || 0) * 100).toFixed(0);

            setText('dominant-side', displayBid > displayAsk ? 'BID (Vendita)' : displayAsk > displayBid ? 'ASK (Acquisto)' : '-');
            setText('spoof-ratio', ratio + '%');
            setText('spoof-volume', (displayBid + displayAsk).toFixed(1) + ' ' + symbolShort);

            // Update spoofing meter
            throttledUpdate('spoof-meter', () => {
                const total = displayBid + displayAsk || 1;
                const bidPct = (displayBid / total * 100).toFixed(0);
                const askPct = (displayAsk / total * 100).toFixed(0);
                
                const bidBar = document.getElementById('bid-bar');
                const askBar = document.getElementById('ask-bar');
                if (bidBar) bidBar.style.width = bidPct + '%';
                if (askBar) askBar.style.width = askPct + '%';
                
                setText('bid-pct', bidPct + '%');
                setText('ask-pct', askPct + '%');
                setText('bid-vol', displayBid.toFixed(1));
                setText('ask-vol', displayAsk.toFixed(1));
                setText('alerts-count', String((displayDetails.bidSpoofCount || 0) + (displayDetails.askSpoofCount || 0)));
            });

            // Update flow steps
            throttledUpdate('flow', () => {
                const alerts = displayDetails.highConfidenceAlerts || 0;
                updateFlowStep('flow-1', alerts >= 3, alerts + ' allarmi');
                updateFlowStep('flow-2', parseFloat(ratio) >= 70, ratio + '%');
                updateFlowStep('flow-3', conf >= 78, conf + '%');
                
                const signalStep = document.getElementById('flow-4');
                if (signalStep) {
                    signalStep.className = 'flow-step' + (action !== 'WAIT' ? ' pass' : '');
                    setText('flow-4-value', translateAction(action));
                    document.getElementById('flow-4-value').style.color = action === 'BUY' ? 'var(--green)' : action === 'SELL' ? 'var(--red)' : '';
                }
            });

            // Update chart
            throttledUpdate('chart', () => updateChart(displayBid, displayAsk));
            
            checkConflict();
        }

        function updateFlowStep(id, pass, value) {
            const el = document.getElementById(id);
            el.className = 'flow-step ' + (pass ? 'pass' : 'fail');
            document.getElementById(id + '-value').textContent = value;
        }

        // Aggiorna statistiche account
        function updateAccountStats(data) {
            if (data.balance !== undefined) {
                setText('balance', '$' + data.balance.toFixed(2));
            }
            if (data.equity !== undefined) {
                setText('equity', '$' + data.equity.toFixed(2));
