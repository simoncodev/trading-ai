        // ‚òÖ AGGIORNA P&L IN TEMPO REALE usando il prezzo corrente
        function updateLivePositionPnl() {
            if (!currentPosition || !currentPrice || currentPrice <= 0) return;
            
            const pos = currentPosition;
            const entry = parseFloat(pos.entry_price) || 0;
            if (entry <= 0) return;
            
            const isLong = pos.side === 'buy';
            const leverage = parseInt(pos.leverage) || 20;
            const quantity = parseFloat(pos.quantity) || 0;
            
            // Calcola P&L in tempo reale
            let pnl = 0;
            if (isLong) {
                pnl = (currentPrice - entry) * quantity * leverage;
            } else {
                pnl = (entry - currentPrice) * quantity * leverage;
            }
            
            // Stima fee di uscita (0.035%)
            const exitFee = currentPrice * quantity * 0.00035;
            pnl -= exitFee;
            
            const pnlPct = ((currentPrice - entry) / entry * 100 * leverage * (isLong ? 1 : -1));
            
            setText('pos-prices', `Entrata: $${entry.toLocaleString('it-IT', {minimumFractionDigits: 2})} | Attuale: $${currentPrice.toLocaleString('it-IT', {minimumFractionDigits: 2})}`);
            setClass('pos-pnl-box', 'pos-pnl ' + (pnl >= 0 ? 'profit' : 'loss'));
            setText('pos-pnl', formatPnl(pnl));
            setText('pos-pnl-pct', (pnlPct >= 0 ? '+' : '') + pnlPct.toFixed(2) + '%');
        }

