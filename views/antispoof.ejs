            console.log('üìä Stats update:', stats);
            
            const winRate = parseFloat(stats?.winRate || stats?.win_rate || 0);
            const totalTrades = parseInt(stats?.totalTrades) || parseInt(stats?.total_closed) || 0;
            const todayPnl = parseFloat(stats?.today_pnl) || 0;
            const currentBal = parseFloat(stats?.current_balance) || 100;
            const todayPct = currentBal > 0 ? (todayPnl / currentBal * 100) : 0;

            const todayEl = document.getElementById('today-pnl');
            todayEl.textContent = formatPnl(todayPnl);
            todayEl.className = 'stat-value ' + (todayPnl >= 0 ? 'green' : 'red');
            setText('today-pct', (todayPct >= 0 ? '+' : '') + todayPct.toFixed(2) + '%');

            setText('winrate', winRate.toFixed(0) + '%');
            document.getElementById('winrate').className = 'stat-value ' + (winRate >= 50 ? 'green' : 'red');
            setText('trades-count', totalTrades + ' trades');
        }

        function updateTrades(trades) {
            const container = document.getElementById('trades-list');
            if (!trades || trades.length === 0) {
                container.innerHTML = '<div class="list-empty">Nessun trade</div>';
                return;
            }

            container.innerHTML = trades.map(t => {
                const pnl = parseFloat(t.pnl) || 0;
                const time = new Date(t.closed_at || t.created_at).toLocaleTimeString('it-IT');
                return `
                    <div class="list-item">
                        <span style="color: var(--text-dim); min-width: 60px;">${time}</span>
                        <span class="trade-side ${t.side}">${t.side.toUpperCase()}</span>
                        <span>${t.symbol.split('-')[0]}</span>
                        <span style="color: var(--text-dim);">$${parseFloat(t.entry_price).toLocaleString('it-IT')}</span>
                        <span class="trade-pnl ${pnl >= 0 ? 'profit' : 'loss'}">${formatPnl(pnl)}</span>
                    </div>
                `;
            }).join('');
        }

        function updateAlerts(alerts) {
            const container = document.getElementById('alerts-list');
            if (!alerts || alerts.length === 0) {
                container.innerHTML = '<div class="list-empty">Nessun allarme</div>';
                return;
            }

            container.innerHTML = alerts.slice(0, 15).map(a => `
                <div class="list-item">
                    <span>${a.side === 'BID' ? 'üü¢' : 'üî¥'}</span>
                    <span style="min-width: 80px;">$${a.priceLevel.toLocaleString('it-IT')}</span>
                    <span style="color: var(--yellow);">${a.originalSize.toFixed(1)}</span>
                    <span style="color: var(--text-dim); flex: 1; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">${a.message.substring(0, 35)}</span>
                </div>
            `).join('');
        }

        function updateChart(bidVol, askVol) {
            const now = new Date().toLocaleTimeString('it-IT');
            
            chartData.labels.push(now);
            chartData.bid.push(bidVol);
            chartData.ask.push(askVol);
            
            if (chartData.labels.length > 60) {
                chartData.labels.shift();
                chartData.bid.shift();
                chartData.ask.shift();
            }

            chart.data.labels = chartData.labels;
            chart.data.datasets[0].data = chartData.bid;
            chart.data.datasets[1].data = chartData.ask;
            chart.update('none');
        }

        // ===========================================
        // CONFLICT DETECTION
        // ===========================================
        function checkConflict() {
            const warning = document.getElementById('conflict-warning');
            
            // Non mostrare conflitto se siamo nel grace period dopo chiusura
            if (isInClosedGracePeriod()) {
                warning.classList.remove('show');
                return;
            }
            
            if (!currentPosition || currentSignal.action === 'WAIT') {
                warning.classList.remove('show');
                return;
            }

            const positionSide = currentPosition.side;
            const signalAction = currentSignal.action;
            
            const isConflict = (positionSide === 'buy' && signalAction === 'SELL') ||
                               (positionSide === 'sell' && signalAction === 'BUY');

            if (isConflict && currentSignal.confidence >= 50) {
                warning.classList.add('show');
                document.getElementById('conflict-title').textContent = 
                    `Segnale ${translateAction(signalAction)} (${currentSignal.confidence}%) vs Posizione ${positionSide === 'buy' ? 'LONG' : 'SHORT'}`;
                document.getElementById('conflict-desc').textContent = 
                    `Il sistema segnala di ${signalAction === 'BUY' ? 'COMPRARE' : 'VENDERE'} ma hai una posizione ${positionSide === 'buy' ? 'LONG' : 'SHORT'} aperta.`;
            } else {
                warning.classList.remove('show');
            }
        }

        // ===========================================
        // ACTIONS
        // ===========================================
        async function closePosition() {
            if (!confirm('Chiudere la posizione?')) return;
            
            try {
                const res = await fetch('/api/trades/close-all', { method: 'POST' });
                if (!res.ok) {
                    alert('Errore nella chiusura');
                }
            } catch (err) {
                alert('Errore: ' + err.message);
            }
        }

        // ===========================================
        // RESET FUNCTIONS
        // ===========================================
        function showResetModal() {
            document.getElementById('reset-modal').classList.add('show');
        }

        function hideResetModal() {
            document.getElementById('reset-modal').classList.remove('show');
        }

        async function resetBalance() {
            if (!confirm('Sei sicuro di voler resettare solo il balance a $100?')) return;
            try {
                const res = await fetch('/api/account/reset', { method: 'POST' });
                if (res.ok) {
                    hideResetModal();
                    alert('Balance resettato a $100!');
                } else {
                    throw new Error('Errore nel reset');
                }
            } catch (err) {
                alert('Errore: ' + err.message);
            }
        }

        async function resetAll() {
            if (!confirm('‚ö†Ô∏è ATTENZIONE: Questo canceller√† TUTTI i trades e resetter√† il balance. Continuare?')) return;
            try {
                const res = await fetch('/api/reset-all', { method: 'POST' });
                if (res.ok) {
                    hideResetModal();
                    alert('Reset completo eseguito!');
                    location.reload();
                } else {
                    throw new Error('Errore nel reset');
                }
            } catch (err) {
                alert('Errore: ' + err.message);
            }
        }

        // ===========================================
        // HELPERS
        // ===========================================
        function translateAction(action) {
            const map = { 'BUY': 'COMPRA', 'SELL': 'VENDI', 'WAIT': 'ATTESA', 'HOLD': 'MANTIENI' };
            return map[action] || action;
        }

        function formatPnl(value) {
            return (value >= 0 ? '+' : '') + '$' + value.toFixed(2);
        }

        // ===========================================
        // INIT
        // ===========================================
        function init() {
            // Update active symbol button
            document.querySelectorAll('.symbol-btn').forEach(btn => {
                btn.classList.toggle('active', btn.dataset.symbol === currentSymbol);
            });
            
            // Init chart
            const ctx = document.getElementById('chart').getContext('2d');
            chart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: [],
                    datasets: [
                        { label: 'BID', data: [], borderColor: '#3fb950', backgroundColor: 'rgba(63,185,80,0.1)', fill: true, tension: 0.3 },
                        { label: 'ASK', data: [], borderColor: '#f85149', backgroundColor: 'rgba(248,81,73,0.1)', fill: true, tension: 0.3 }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    animation: false,
                    plugins: { legend: { display: true, labels: { color: '#8b949e', font: { size: 10 } } } },
                    scales: {
                        x: { display: false },
                        y: { grid: { color: '#21262d' }, ticks: { color: '#8b949e', font: { size: 10 } } }
                    }
                }
            });
        }

        init();
    </script>
