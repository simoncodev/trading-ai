    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;600;700&display=swap');
        
        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        :root {
            --bg: #0d1117;
            --bg-card: #161b22;
            --bg-hover: #21262d;
            --border: #30363d;
            --text: #c9d1d9;
            --text-dim: #8b949e;
            --green: #3fb950;
            --green-bg: rgba(63,185,80,0.15);
            --red: #f85149;
            --red-bg: rgba(248,81,73,0.15);
            --blue: #58a6ff;
            --yellow: #d29922;
            --purple: #a371f7;
        }
        
        body {
            font-family: 'JetBrains Mono', monospace;
            background: var(--bg);
            color: var(--text);
            min-height: 100vh;
            font-size: 13px;
        }

        /* HEADER */
        header {
            background: var(--bg-card);
            border-bottom: 1px solid var(--border);
            padding: 12px 24px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 16px;
            font-weight: 700;
            color: var(--blue);
        }

        .logo-icon { font-size: 24px; }

        .symbols {
            display: flex;
            gap: 8px;
        }

        .symbol-btn {
            padding: 8px 16px;
            background: transparent;
            border: 1px solid var(--border);
            border-radius: 6px;
            color: var(--text-dim);
            font-family: inherit;
            font-size: 12px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
            text-decoration: none;
        }

        .symbol-btn:hover {
            background: var(--bg-hover);
            color: var(--text);
        }

        .symbol-btn.active {
            background: var(--blue);
            border-color: var(--blue);
            color: #fff;
        }

        .header-info {
            display: flex;
            gap: 24px;
            align-items: center;
        }

        .info-item { text-align: right; }

        .info-label {
            font-size: 10px;
            color: var(--text-dim);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .info-value {
            font-size: 15px;
            font-weight: 700;
        }

        .info-value.green { color: var(--green); }
        .info-value.red { color: var(--red); }

        .container {
            max-width: 1600px;
            margin: 0 auto;
            padding: 20px;
        }

        .grid-2 {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 20px;
        }

        @media (max-width: 1200px) {
            .grid-2 { grid-template-columns: 1fr; }
        }

        .card {
            background: var(--bg-card);
            border: 1px solid var(--border);
            border-radius: 8px;
            overflow: hidden;
        }

        .card-header {
            padding: 12px 16px;
            border-bottom: 1px solid var(--border);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .card-title {
            font-size: 12px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: var(--text-dim);
        }

        .card-badge {
            padding: 2px 8px;
            border-radius: 10px;
            font-size: 10px;
            font-weight: 700;
        }

        .card-badge.live {
            background: var(--green-bg);
            color: var(--green);
        }

        .card-body { padding: 16px; }

        /* ACCOUNT STATS */
        .account-stats {
            display: grid;
            grid-template-columns: repeat(6, 1fr);
            gap: 16px;
            margin-bottom: 20px;
        }

        .stat-card {
            background: var(--bg-card);
            border: 1px solid var(--border);
            border-radius: 8px;
            padding: 16px;
            text-align: center;
        }

        .stat-label {
            font-size: 10px;
            color: var(--text-dim);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 8px;
        }

        .stat-value {
            font-size: 20px;
            font-weight: 700;
        }

        .stat-value.green { color: var(--green); }
        .stat-value.red { color: var(--red); }
        .stat-value.blue { color: var(--blue); }

        .stat-sub {
            font-size: 11px;
            color: var(--text-dim);
            margin-top: 4px;
        }

        @media (max-width: 900px) {
            .account-stats { grid-template-columns: repeat(2, 1fr); }
        }

        /* POSITION */
        .position-wrapper { margin-bottom: 20px; }

        .no-position {
            background: var(--bg-card);
            border: 1px dashed var(--border);
            border-radius: 8px;
            padding: 40px;
            text-align: center;
            color: var(--text-dim);
            transition: opacity 0.3s ease;
        }

        .no-position-icon {
            font-size: 48px;
            margin-bottom: 12px;
            opacity: 0.5;
        }

        .position-card {
            background: var(--bg-card);
            border: 2px solid var(--border);
            border-radius: 8px;
            display: grid;
            grid-template-columns: 150px 1fr repeat(4, auto);
            align-items: center;
            gap: 24px;
            padding: 20px;
            transition: all 0.3s ease;
        }

        .position-card.long {
            border-color: var(--green);
            border-left-width: 4px;
        }

        .position-card.short {
            border-color: var(--red);
            border-left-width: 4px;
        }

        .pos-side {
            font-size: 28px;
            font-weight: 700;
            text-align: center;
            padding: 12px;
            border-radius: 6px;
            transition: all 0.3s ease;
        }

        .pos-side.long { background: var(--green-bg); color: var(--green); }
        .pos-side.short { background: var(--red-bg); color: var(--red); }

        .pos-info { display: flex; flex-direction: column; gap: 4px; }
        .pos-symbol { font-size: 18px; font-weight: 700; }
        .pos-prices { font-size: 12px; color: var(--text-dim); }

        .pos-metric {
            text-align: center;
            padding: 8px 16px;
            background: var(--bg);
            border-radius: 6px;
            min-width: 100px;
        }

        .pos-metric-value { font-size: 16px; font-weight: 700; }
        .pos-metric-label { font-size: 10px; color: var(--text-dim); text-transform: uppercase; margin-top: 4px; }

        .pos-pnl {
            text-align: center;
            padding: 12px 20px;
            border-radius: 6px;
            min-width: 120px;
        }

        .pos-pnl.profit { background: var(--green-bg); }
        .pos-pnl.loss { background: var(--red-bg); }

        .pos-pnl-value { font-size: 22px; font-weight: 700; }
        .pos-pnl.profit .pos-pnl-value { color: var(--green); }
        .pos-pnl.loss .pos-pnl-value { color: var(--red); }

        .pos-pnl-pct { font-size: 13px; margin-top: 4px; }
        .pos-pnl.profit .pos-pnl-pct { color: var(--green); }
        .pos-pnl.loss .pos-pnl-pct { color: var(--red); }

        .pos-close-btn {
            padding: 12px 20px;
            background: var(--red);
            border: none;
            border-radius: 6px;
            color: #fff;
            font-family: inherit;
            font-weight: 700;
            cursor: pointer;
            transition: opacity 0.2s;
        }

        .pos-close-btn:hover { opacity: 0.8; }

        /* SIGNAL */
        .signal-section {
            display: grid;
            grid-template-columns: 1fr 2fr;
            gap: 20px;
            margin-bottom: 20px;
        }

        .signal-box {
            background: var(--bg-card);
            border: 2px solid var(--border);
            border-radius: 8px;
            padding: 24px;
            text-align: center;
        }

        .signal-box.buy { border-color: var(--green); background: linear-gradient(135deg, rgba(63,185,80,0.1) 0%, var(--bg-card) 100%); }
        .signal-box.sell { border-color: var(--red); background: linear-gradient(135deg, rgba(248,81,73,0.1) 0%, var(--bg-card) 100%); }

        .signal-label {
            font-size: 11px;
            color: var(--text-dim);
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 8px;
        }

        .signal-action { font-size: 42px; font-weight: 700; margin-bottom: 8px; }
        .signal-action.buy { color: var(--green); }
        .signal-action.sell { color: var(--red); }
        .signal-action.wait { color: var(--text-dim); }

        .signal-confidence { font-size: 24px; font-weight: 700; color: var(--blue); }

        .signal-details {
            background: var(--bg-card);
            border: 1px solid var(--border);
            border-radius: 8px;
            padding: 20px;
        }

        .signal-reasoning {
            padding: 16px;
            background: var(--bg);
            border-radius: 6px;
            border-left: 3px solid var(--blue);
            margin-bottom: 16px;
        }

        .signal-reasoning-title {
            font-size: 10px;
            color: var(--text-dim);
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 8px;
        }

        .signal-reasoning-text { font-size: 13px; line-height: 1.5; }

        .signal-meta {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 12px;
        }

        .meta-item {
            padding: 12px;
            background: var(--bg);
            border-radius: 6px;
            text-align: center;
        }

        .meta-label { font-size: 10px; color: var(--text-dim); text-transform: uppercase; margin-bottom: 4px; }
        .meta-value { font-size: 14px; font-weight: 700; }

        /* SPOOFING */
        .spoof-meter {
            height: 40px;
            background: var(--bg);
            border-radius: 20px;
            display: flex;
            overflow: hidden;
            margin: 16px 0;
        }

        .spoof-bar {
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 12px;
            font-weight: 700;
            color: #000;
            transition: width 0.5s ease;
        }

        .spoof-bar.bid { background: linear-gradient(90deg, #2ea043, var(--green)); }
        .spoof-bar.ask { background: linear-gradient(90deg, var(--red), #da3633); }

        .spoof-labels {
            display: flex;
            justify-content: space-between;
            font-size: 11px;
            color: var(--text-dim);
        }

        .chart-container { height: 180px; position: relative; }

        /* LISTS */
        .list { max-height: 220px; overflow-y: auto; }

        .list-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 10px;
            border-bottom: 1px solid var(--border);
            font-size: 12px;
        }

        .list-item:last-child { border-bottom: none; }
        .list-empty { padding: 24px; text-align: center; color: var(--text-dim); }

        .trade-side { padding: 2px 8px; border-radius: 4px; font-size: 10px; font-weight: 700; }
        .trade-side.buy { background: var(--green-bg); color: var(--green); }
        .trade-side.sell { background: var(--red-bg); color: var(--red); }

        .trade-pnl { font-weight: 700; margin-left: auto; }
        .trade-pnl.profit { color: var(--green); }
        .trade-pnl.loss { color: var(--red); }

        ::-webkit-scrollbar { width: 6px; }
        ::-webkit-scrollbar-track { background: var(--bg); }
        ::-webkit-scrollbar-thumb { background: var(--border); border-radius: 3px; }

        .status-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            display: inline-block;
            margin-right: 6px;
        }

        .status-dot.active { background: var(--green); animation: blink 1s infinite; }
        .status-dot.disconnected { background: var(--red); }

        @keyframes blink { 0%, 100% { opacity: 1; } 50% { opacity: 0.4; } }

        /* CONFLICT WARNING */
        .conflict-warning {
            background: rgba(210,153,34,0.15);
            border: 2px solid var(--yellow);
            border-radius: 8px;
            padding: 16px 20px;
            margin-bottom: 20px;
            display: none;
            align-items: center;
            gap: 16px;
        }

        .conflict-warning.show { display: flex; }
        .conflict-icon { font-size: 32px; }
        .conflict-content { flex: 1; }
        .conflict-title { font-size: 14px; font-weight: 700; color: var(--yellow); margin-bottom: 4px; }
        .conflict-desc { font-size: 12px; color: var(--text-dim); }

        .conflict-btn {
            padding: 10px 20px;
            background: var(--yellow);
            border: none;
            border-radius: 6px;
            color: #000;
            font-family: inherit;
            font-weight: 700;
            cursor: pointer;
        }

        /* FLOW */
        .flow-container {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            padding: 16px;
            background: var(--bg-card);
            border: 1px solid var(--border);
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .flow-step {
            padding: 10px 16px;
            background: var(--bg);
            border: 2px solid var(--border);
            border-radius: 6px;
            text-align: center;
            min-width: 100px;
        }

        .flow-step.pass { border-color: var(--green); background: var(--green-bg); }
        .flow-step.fail { border-color: var(--red); background: var(--red-bg); }

        .flow-num { font-size: 14px; font-weight: 700; color: var(--text-dim); }
        .flow-step.pass .flow-num { color: var(--green); }
        .flow-step.fail .flow-num { color: var(--red); }

        .flow-name { font-size: 9px; color: var(--text-dim); text-transform: uppercase; margin-top: 2px; }
        .flow-value { font-size: 11px; font-weight: 700; margin-top: 4px; }
        .flow-arrow { color: var(--border); font-size: 18px; }

        @media (max-width: 800px) {
            .signal-section { grid-template-columns: 1fr; }
            .position-card { grid-template-columns: 1fr; text-align: center; }
            .flow-container { flex-wrap: wrap; }
        }

        /* Connection status bar */
        .connection-bar {
            background: var(--bg-card);
            border-bottom: 1px solid var(--border);
            padding: 4px 24px;
            font-size: 11px;
            display: flex;
            justify-content: space-between;
            color: var(--text-dim);
        }

        .connection-bar.disconnected { background: rgba(248,81,73,0.1); }

        /* Reset button */
        .reset-btn {
            padding: 8px 16px;
            background: linear-gradient(135deg, #f85149 0%, #da3633 100%);
            border: none;
            border-radius: 6px;
            color: #fff;
            font-family: inherit;
            font-size: 11px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.2s;
        }

        .reset-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 0 15px rgba(248,81,73,0.4);
        }

        /* Modal */
        .modal-overlay {
            position: fixed;
            top: 0; left: 0; right: 0; bottom: 0;
            background: rgba(0,0,0,0.8);
            display: none;
            align-items: center;
            justify-content: center;
            z-index: 1000;
        }

        .modal-overlay.show { display: flex; }

        .modal-content {
            background: var(--bg-card);
            border: 1px solid var(--border);
            border-radius: 12px;
            padding: 24px;
            max-width: 400px;
            width: 90%;
            text-align: center;
        }

        .modal-title {
            font-size: 18px;
            font-weight: 700;
            color: var(--yellow);
            margin-bottom: 16px;
        }

        .modal-body { margin-bottom: 20px; }
        .modal-body p { color: var(--text); margin-bottom: 16px; }

        .modal-options { display: flex; flex-direction: column; gap: 12px; }

        .modal-option {
            background: var(--bg);
            border: 1px solid var(--border);
            padding: 16px;
            border-radius: 8px;
            color: var(--text);
            font-family: inherit;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.2s;
            text-align: left;
        }

        .modal-option:hover { border-color: var(--blue); }
        .modal-option.danger:hover { border-color: var(--red); background: var(--red-bg); }
        .modal-option small { color: var(--text-dim); font-size: 11px; display: block; margin-top: 4px; }

        .modal-close {
            background: transparent;
            border: 1px solid var(--border);
            padding: 10px 24px;
            border-radius: 6px;
            color: var(--text-dim);
            font-family: inherit;
            cursor: pointer;
            margin-top: 12px;
        }

        .modal-close:hover { border-color: var(--text); color: var(--text); }
    </style>
</head>
